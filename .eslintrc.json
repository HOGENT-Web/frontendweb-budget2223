{
  "env": {
        "browser": true,
        "es2021": true
  },
  "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
  },
  "ignorePatterns": [
        "node_modules",
        "*.config.js"
  ],
  "extends": [
        "eslint:recommended",
        "airbnb",
        "plugin:react/recommended",
        "plugin:react-hooks/recommended",
        "plugin:import/recommended"
  ],
  "rules": {
        "react/react-in-jsx-scope": "off",
        "react/jsx-props-no-spreading": "off",
        "react/prop-types": "off"
  }
}
